
@{
    ViewBag.Title = "退款查询";
}
<form action="~/WeixinPay2/RefundQuery" role="form" method="post" id="refundQueryForm">
    <div style="margin-left:2%;color:#f00">微信订单号、商户订单号、商户退款单号、微信退款单号选填至少一个，微信退款单号优先：</div><br />
    <div style="margin-left:2%;">微信订单号：</div><br />
    <input class="textbox" id="transaction_id" name="transactionId" type="text" /><br /><br />
    <div style="margin-left:2%;">商户订单号：</div><br />
    <input class="textbox" id="out_trade_no" name="outTradeNo" type="text" /><br /><br />
    <div style="margin-left:2%;">商户退款单号：</div><br />
    <input class="textbox" id="out_refund_no" name="outRefoundNo" type="text" /><br /><br />
    <div style="margin-left:2%;">微信退款单号：</div><br />
    <input class="textbox" id="refund_id" name="refundId" type="text" /><br /><br />
    <div align="center">
        <button id="btnSubmit" class="button" type="submit">查询退款</button>
    </div>
</form>